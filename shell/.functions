function continue_prompt {
    local yn
    while true; do
        echo "Do you want to continue? (y/n) "
        read yn
        case $yn in
            [Yy]* ) return 0;;
            [Nn]* ) return 1;;
            * ) echo "Please answer y or n.";;
        esac
    done
}


