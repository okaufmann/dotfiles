function continue_prompt {
    local yn
    # prepare a default message or take the first argument
    local message=${1:-"Do you want to continue? (y/n) "}
    while true; do
        echo $message
        read yn
        case $yn in
            [Yy]* ) return 0;;
            [Nn]* ) return 1;;
            * ) echo "Please answer y or n.";;
        esac
    done
}


